<UserControl x:Class="WubiMaster.Controls.ToolButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Name="tool_button"
             d:DesignHeight="150"
             d:DesignWidth="150"
             mc:Ignorable="d">

    <Grid MinWidth="150" MinHeight="150">

        <Border Background="{DynamicResource BackColor}" CornerRadius="10" />

        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontFamily="../Fonts/#iconfont"
                   FontSize="70"
                   Foreground="{DynamicResource IconColor}"
                   Text="{Binding ElementName=tool_button, Path=IconText}" />

        <TextBlock Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="15"
                   Foreground="{DynamicResource TextColor}"
                   Text="{Binding ElementName=tool_button, Path=Title}" />
    </Grid>
</UserControl>