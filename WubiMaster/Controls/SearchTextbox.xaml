<UserControl x:Class="WubiMaster.Controls.SearchTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WubiMaster.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="30"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <UserControl.Resources>

        <Style x:Key="tbx_style" TargetType="TextBox">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">

                        <Border Background="Transparent"
                                BorderBrush="Orange"
                                BorderThickness="1"
                                CornerRadius="15">

                            <Grid>

                            </Grid>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0" />

        <Rectangle Grid.Column="1"
                   Width="2"
                   Margin="1,3"
                   Fill="Red" />

        <TextBlock Grid.Column="2" Text="Hello" />

        <TextBox Grid.Column="2" Style="{StaticResource tbx_style}" />
    </Grid>
</UserControl>
