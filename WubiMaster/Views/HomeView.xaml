<UserControl x:Class="WubiMaster.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:WubiMaster.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WubiMaster.ViewModels"
             d:DesignHeight="600"
             d:DesignWidth="800"
             Style="{DynamicResource PageStyle}"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:HomeViewModel />
    </UserControl.DataContext>

    <Grid>
        <Border Background="{DynamicResource bg-100}" CornerRadius="15" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="250"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="{DynamicResource bg-200}"
                    CornerRadius="15">

                <TextBlock Margin="20,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource text-200}"
                           Text="快速查询字根" />
            </Border>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <Border Margin="5,5,10,10" Style="{StaticResource CardStyle}">
                    <Border.Background>
                        <LinearGradientBrush Opacity="0.6" StartPoint="0,0" EndPoint="1,1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0" Color="{DynamicResource primary-1000}" />
                                <GradientStop Offset="1" Color="{DynamicResource primary-3000}" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Style="{StaticResource CardTitleStyle}" Text="Rime 大师" />

                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Viewbox Width="30"
                                     Height="30"
                                     HorizontalAlignment="Left">
                                <TextBlock FontFamily="../Fonts/#iconfont"
                                           Foreground="{DynamicResource primary-200}"
                                           Text="&#xe8fe;" />
                            </Viewbox>

                            <TextBlock Margin="20,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       FontWeight="Light"
                                       Foreground="{DynamicResource text-100}"
                                       Text="一份详尽而简洁的使用指南" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Grid.Column="0">

                    <Border Margin="5,5,10,10" Style="{StaticResource CardStyle}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid>

                    <Border Margin="10,5,5,10"
                            Background="{DynamicResource bg-200}"
                            CornerRadius="15" />

                    <UniformGrid Columns="3"
                                 Rows="3"
                                 Visibility="Collapsed">

                        <c:ToolButton Title="字根表"
                                      IconText="&#xe67a;"
                                      TBCommand="{Binding ShowEtymonCommand}" />

                        <c:ToolButton Title="自造词" IconText="&#xe610;" />

                        <c:ToolButton Title="词库管理" IconText="&#xe608;" />

                        <c:ToolButton Title="配置" IconText="&#xe8b8;" />

                        <c:ToolButton Title="字典" IconText="&#xe694;" />

                        <c:ToolButton Title="表情" IconText="&#xe69e;" />

                        <c:ToolButton Title="符号" IconText="&#xe704;" />

                        <c:ToolButton Title="快捷键" IconText="&#xe60a;" />

                        <c:ToolButton Title="主题" IconText="&#xe654;" />
                    </UniformGrid>
                </Grid>

                <Grid Grid.Row="1">

                    <Border Margin="10,5,5,10" Style="{StaticResource CardStyle}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Height="130">

                <Border Margin="5,10,5,0" Style="{StaticResource CardStyle}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center"
                                       Style="{StaticResource CardTitleStyle}"
                                       Text="组织基地" />
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="15"
                                       FontWeight="Light"
                                       Foreground="{DynamicResource text-200}"
                                       Text="斯是陃室，惟吾德馨" />
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">

                            <c:IconButton ButtonCommand="{Binding ToQQSocialCommand}"
                                          IconText="&#xE882;"
                                          Style="{StaticResource SocialIconStyle}" />

                            <c:IconButton IconText="&#xe637;" Style="{StaticResource SocialIconStyle}" />

                            <c:IconButton IconText="&#xe6a6;" Style="{StaticResource SocialIconStyle}" />

                            <c:IconButton IconText="&#xe849;" Style="{StaticResource SocialIconStyle}" />

                            <c:IconButton IconText="&#xe691;" Style="{StaticResource SocialIconStyle}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>