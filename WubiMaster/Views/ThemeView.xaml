<UserControl x:Class="WubiMaster.Views.ThemeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WubiMaster.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Border Background="{DynamicResource bg-200}" CornerRadius="15" />

            <Border Width="350"
                    Height="60"
                    Background="White"
                    BorderBrush="{DynamicResource accent-100}"
                    BorderThickness="2"
                    CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1.5*" />
                    </Grid.RowDefinitions>

                    <Border Margin="15,0,0,0">
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="16"
                                   Foreground="{DynamicResource bg-100}"
                                   Text="wkvb" />
                    </Border>


                    <StackPanel Grid.Row="1"
                                Margin="15,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                        <TextBlock Margin="5,0" Text="1.你好" />
                        <TextBlock Margin="5,0" Text="2.您好" />
                        <TextBlock Margin="5,0" Text="3.像她" />

                        <Grid Margin="100,0,0,0" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="&lt;" />
                            <TextBlock Grid.Column="1" Text="&gt;" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>

        <Grid Grid.Row="1">
            <Border Background="{DynamicResource bg-100}" CornerRadius="15" />
        </Grid>
    </Grid>
</UserControl>
