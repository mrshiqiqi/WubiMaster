                                           VerticalAlignment="Center"
                                           FontSize="15"
                                           Foreground="{DynamicResource text-100}"
                                           Text="关联目录:" />
                            </StackPanel>

                            <StackPanel Grid.Row="1">
                                <TextBlock FontSize="14"
                                           Foreground="{DynamicResource text-200}"
                                           Text="选择 Rime 的用户目录" />
                                <StackPanel Margin="0,4" Orientation="Horizontal">
