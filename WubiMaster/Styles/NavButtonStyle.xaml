<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:WubiMaster.Controls">

    <Style x:Key="NavButtonStyle" TargetType="c:NavButton">
        <Setter Property="Height" Value="40" />
        <Setter Property="IconColor" Value="{DynamicResource IconColor}" />
        <Setter Property="IcontFontSize" Value="18" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="TextFontSize" Value="15" />
    </Style>
</ResourceDictionary>