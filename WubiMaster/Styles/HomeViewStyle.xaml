<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:WubiMaster.Controls">

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource bg-200}" />
        <Setter Property="CornerRadius" Value="15" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <Style x:Key="CardTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Foreground" Value="{DynamicResource text-100}" />
    </Style>

    <Style x:Key="SocialIconStyle" TargetType="c:IconButton">
        <Setter Property="Margin" Value="15,0" />
        <Setter Property="ButtonBackground" Value="{DynamicResource bg-100}" />
        <Setter Property="ButtonForeground" Value="{DynamicResource primary-200}" />
        <Setter Property="ButtonWidth" Value="50" />
        <Setter Property="ButtonHeight" Value="50 " />
    </Style>
</ResourceDictionary>